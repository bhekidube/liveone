<section id="contact">
    <form class="form-horizontal" method="post" name="">

            <div class="row">
                <div class="col-lg-8 mx-auto text-center">
                    <h2 class="section-heading">Don't be a stranger!</h2>
                    <hr class="primary">
                    <p>Give us a ring or drop us a message below! We'll get back to you as soon as possible.</p>
                </div>
            </div>
        <div class="row">
            <div class="col-lg-4 ml-auto text-center">
                <i class="fa fa-phone fa-3x sr-contact"></i>
                <p>+27-82-888-8888</p>
            </div>
            <div class="col-lg-4 mr-auto text-center">
                <i class="fa fa-envelope-o fa-3x sr-contact"></i>

                <p>
                    <a href="mailto:your-email@your-domain.com">info@topcaves.com</a>
                </p>
                <div>@ViewBag.MailSent</div>
                <div class="col-lg-4 mr-auto text-center">
                    <table class="table-light left">
                        <tr><td>Name</td>
                            <td><input type="text" class="input-medium" id="name" name="name" placeholder="Name" data-val="true" data-val-required="*">
                                    <span class="field-validation-valid" data-valmsg-for="name" data-valmsg-replace="true"></span>
                            </td>
                        </tr>


                        <tr><td>Email</td>
                            <td><input type="text" class="" id="email" name="email" placeholder="Email" data-val="true" data-val-required="*" data-val-email="Not valid">
                                    <span class="field-validation-valid" data-valmsg-for="email" data-valmsg-replace="true"></span>
                            </td>
                        </tr>
                        <tr><td>Comments</td>
                        <td><textarea type="text" rows="4 cols="50" class="" id="comment" name="comment" placeholder="Comments" data-val="true" data-val-required="*"></textarea>
                            <span class="field-validation-valid" data-valmsg-for="comment" data-valmsg-replace="true"></span>
                            </td>
                        </tr>
                    </table>
                    <button type="submit">Send</button>
                    @if (ViewBag.MailSent != null && ViewBag.MailSent)
                    {
                        <div>Mail Sent!</div>
                    }
                </div>



            </div>
            <div>
                <a class="nav-link js-scroll-trigger" href="#contact"><i class="fa fa-facebook fa-3x"></i></a>
                <a class="nav-link js-scroll-trigger" href="#contact"><i class="fa fa-twitter fa-3x"></i></a>
                <a class="nav-link js-scroll-trigger" href="#contact"><i class="fa fa-pinterest fa-3x"></i></a>
                <a class="nav-link js-scroll-trigger" href="#contact"><i class="fa fa-instagram fa-3x"></i></a>
                <a class="nav-link js-scroll-trigger" href="#contact"><i class="fa fa-whatsapp fa-3x"></i></a>

            </div>

        </div>
    </form>
</section>
