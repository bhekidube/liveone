@model IEnumerable<WebApplication1.Models.GroupEdit> 


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="masthead">
    <section id="groupCapture">
        @using (Html.BeginForm("CreateGroup", "School", FormMethod.Post))
            {
            <div>
                Group Name  <input type="text" name="GroupDesc" value="" /><br>
                <br>Group Type
                <select name="GroupTypeNo">
                    <option value="1">Class</option>
                    <option value="2">Club</option>
                    <option value="3">Sports</option>
                </select><br>
                Start Date <input type="date" name="StartDate"><br />
                End Date <input type="date" name="EndDate"><br />
                <input type="submit" value="Save new group" class="btn-primary">
            </div>
        }
    </section>
    @*<div>@Html.ActionLink("Create Group", "ViewCreateGroup", "School", null, null)</div>*@
    <table>
        <tr>
            <td>Group name</td>
            <td>
                Start Date
            </td>
            <td>
                End Date
            </td>

        </tr>
        @foreach (var element in (List<WebApplication1.Models.GroupEdit>)ViewBag.Groups)
        {

            <tr>
                <td>@Html.ActionLink(element.GroupDesc, "ViewEditGroup", "School", new { id = element.GroupNo }, null)</td>
                <td>
                    @element.StartDate
                </td>
                <td>
                    @element.EndDate
                </td>
                <td>
                    @Html.ActionLink("Remove", "DeleteGroup", "School", new { id = element.GroupNo }, null)
                </td>
            </tr>
        }
    </table>
